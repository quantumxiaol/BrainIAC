# ISLES-2022 dataset root
ISLES_ROOT=/data/datasets/ISLES-2022

# Training device
GPU_DEVICE=0

# Checkpoints and output
SIMCLR_CKPT=src/checkpoints/BrainIAC.ckpt
CSV_DIR=src/data/csvs/isles2022
# Auto-generated by scripts/make_isles2022_segmentation_config.py
CFG_PATH=scripts/isles2022_segmentation.yml
OUT_DIR=results/isles2022_segmentation
LOG_DIR=logs

# Split settings
TRAIN_RATIO=0.8
VAL_RATIO=0.1
SPLIT_SEED=42
IMAGE_MODALITY=dwi
REQUIRE_ALIGNED=yes
DROP_EMPTY_MASK=yes
AFFINE_ATOL=1e-3

# Training hyperparameters
BATCH_SIZE=4
NUM_WORKERS=4
MAX_EPOCHS=100
LR=1e-4
WEIGHT_DECAY=1e-4
SW_BATCH_SIZE=2
PRECISION=32
ACCUMULATE_GRAD_BATCHES=1
GRADIENT_CLIP_VAL=1.0
MATMUL_PRECISION=high
FREEZE_BACKBONE=yes

# Logging
RUN_NAME=isles2022_segmentation
PROJECT_NAME=brainiac_isles2022_segmentation
WANDB_MODE=offline
